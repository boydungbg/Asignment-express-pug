doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(name='description', content='')
  meta(name='author', content='')
  title= title
  // Custom fonts for this template
  link(href='/vendor/fontawesome-free/css/all.min.css', rel='stylesheet', type='text/css')
  link(href='https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i', rel='stylesheet')
  // Custom styles for this template
  link(href='/css/sb-admin-2.min.css', rel='stylesheet')
  // Custom styles for this page
  link(href='/vendor/datatables/dataTables.bootstrap4.min.css', rel='stylesheet')
// Page Wrapper
#wrapper
  // Sidebar
  include ../layout/nav-left.pug
  // Content Wrapper
  #content-wrapper.d-flex.flex-column
    // Main Content
    #content
      // Topbar
      include ../layout/nav-top.pug
      // End of Topbar
      // Begin Page Content
      .container-fluid
        // Page Heading
        h1.h3.mb-2.text-gray-800.mb-4 Management User
        .card.shadow.mb-4
          .card-header.py-3
            .d-flex.align-items-center
              h6.m-0.font-weight-bold.text-primary List Users
              button.btn.btn-primary.ml-auto(type='button') New User
          .card-body
            .table-responsive
              table#dataTable.table.table-bordered(width='100%', cellspacing='0')
                thead
                  tr
                    th First Name
                    th Last Name
                    th Email
                    th Phone Number
                    th Date Create
                    th Address
                    th Action
                tfoot
                  tr
                    th First Name
                    th Last Name
                    th Email
                    th Phone Number
                    th Date Create
                    th Address
                    th Action 
                tbody
                  each user in listUsers
                    tr
                      td #{user.fname}
                      td #{user.lname}
                      td #{user.email}
                      td #{user.phoneNumber}
                      td #{user.dateCreate}
                      td #{user.address}
                      td
                        -if(user.isAccuracy != 2)
                          button.btn.btn-danger(type='button') Edit
                        button.btn.btn-danger.ml-3(type='button') #{user.isAccuracy != 2 ? "Block" : "Unblock" }
    // /.container-fluid
    // End of Main Content
    // Footer
    footer.sticky-footer.bg-white
      .container.my-auto
        .copyright.text-center.my-auto
          span Copyright &copy; Your Website 2019
    // End of Footer
  // End of Content Wrapper
// End of Page Wrapper
// Scroll to Top Button
a.scroll-to-top.rounded(href='#page-top')
  i.fas.fa-angle-up
// Logout Modal
include ../layout/motal-logout
// Bootstrap core JavaScript
script(src='/vendor/jquery/jquery.min.js')
script(src='/vendor/bootstrap/js/bootstrap.bundle.min.js')
// Core plugin JavaScript
script(src='/vendor/jquery-easing/jquery.easing.min.js')
// Custom scripts for all pages
script(src='/js/sb-admin-2.min.js')
// Page level plugins
script(src='/vendor/datatables/jquery.dataTables.min.js')
script(src='/vendor/datatables/dataTables.bootstrap4.min.js')
// Page level custom scripts
script(src='/js/demo/datatables-demo.js')
