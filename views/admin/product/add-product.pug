doctype html
head
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
  meta(name='description', content='')
  meta(name='author', content='')
  title= title
  // Custom fonts for this template
  link(href='/vendor/fontawesome-free/css/all.min.css', rel='stylesheet', type='text/css')
  link(href='https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i', rel='stylesheet')
  // Custom styles for this template
  link(href='/css/sb-admin-2.min.css', rel='stylesheet')
  // Custom styles for this page
  link(href='/vendor/datatables/dataTables.bootstrap4.min.css', rel='stylesheet')
// Page Wrapper
#wrapper
  // Sidebar
  include ../layout/nav-left.pug
  // Content Wrapper
  #content-wrapper.d-flex.flex-column
    // Main Content
    #content
      // Topbar
      include ../layout/nav-top.pug 
      // End of Topbar
      .container
        .row
            h1 
             b Add Product
        .row
            .col-sm-12
                .text-center
                    form(action="/admin/product/add-product" method="POST" enctype="multipart/form-data")
                      .row
                          h4.m-4
                              b.text-sm-center Product content
                      .form-group.row
                          label.col-sm-4.col-form-label(for='inputName') Name
                          .col-sm-8
                              input#inputName.form-control.col-sm-7(type='text' name = "name" required placeholder ="Name product (ex:bla)")
                      .form-group.row
                          label.col-sm-4.col-form-label(for='inputPrice') Price
                          .col-sm-8
                              input#inputPrice.form-control.col-sm-7(type='text' name = "price" required placeholder ="Price product (ex:29$)")
                      .form-group.row
                          label.col-sm-4.col-form-label(for='inputCategory') Category
                          .col-sm-8
                              select#inputCategory.form-control.col-sm-7(name= "category")
                                  option(selected='' disabled value="") Choose...
                                  option(value = "Women") Women
                                  option(value = "Men") Men
                                  option(value = "Kids") Kits
                      #list-subcategory
                      .form-group.row
                          label.col-sm-4.col-form-label(for='inputIntroduce') Introduce
                          .col-sm-8
                              textarea#inputIntroduce(name="introduce", cols="30", rows="5" required placeholder="Introduce product").form-control.col-sm-7
                      .form-group.row
                          label.col-sm-4.col-form-label(for='inputDescription') Description
                          .col-sm-8
                              textarea#inputDescription(name="description", cols="30", rows="5" required placeholder="Description product").form-control.col-sm-7
                      .row
                          h4.m-4
                              b.text-sm-center Product Option
                      #wrapper-product-option
                        .form-group.row
                            label.col-sm-4.col-form-label(for='inputWeight') Weight
                            .col-sm-8
                                input#inputWeight.form-control.col-sm-7(type='text' name = "weight" required placeholder ="Weight product (ex: 0.79)")
                        .form-group.row
                            label.col-sm-4.col-form-label(for='inputDimensions') Dimensions
                            .col-sm-8
                               .d-flex.align-items-center.col-sm-7.justify-content-between.pl-0.pr-0
                                  input#inputDimensions.form-control.col-sm-3(type='text' name = "chest" required placeholder ="Chest")
                                  div x
                                  input#inputDimensions.form-control.col-sm-3(type='text' name = "length" required placeholder ="Lenght")
                                  div x
                                  input#inputDimensions.form-control.col-sm-3(type='text' name = "sleeve" required placeholder = "Sleeve")
                        .form-group.row
                            label.col-sm-4.col-form-label(for='inputMaterials') Materials
                            .col-sm-8
                                input#inputColor.form-control.col-sm-7(type='text' name = "materials" required placeholder ="Materials product (ex:60)")
                        .form-group.row
                            label.col-sm-4.col-form-label(for='inputColor') Color
                            .col-sm-8
                                input#inputColor.form-control.col-sm-7(type='text' name = "color" required placeholder ="Color product (ex:red,black,white,...)")
                        .form-group.row
                            label.col-sm-4.col-form-label(for='inputSize') Size
                            .col-sm-8
                              input#inputSize.form-control.col-sm-7(type='text' name = "size" required placeholder ="Size product (ex:S,M,L,XL,XXL or FreeSize)")
                        div#image-path(image = "")
                          div#list-image
                        .form-group.row
                            label.col-sm-4.col-form-label(for='inputImage')
                            .col-sm-8.pl-0
                                input#inputImage.form-control-file.col-sm-7(type='file' name="image" multiple)
                        .col-sm-9.d-flex
                         button.btn.btn-success.ml-auto.mb-5.mr-3 Add product
    // End of Main Content
    // Footer
    footer.sticky-footer.bg-white
      .container.my-auto
        .copyright.text-center.my-auto
          span Copyright &copy; Your Website 2020
    // End of Footer
  // End of Content Wrapper
// End of Page Wrapper
// Scroll to Top Button
include ../layout/motal-logout
// Bootstrap core JavaScript
script(src='/vendor/jquery/jquery.min.js')
script(src='/vendor/bootstrap/js/bootstrap.bundle.min.js')
// Core plugin JavaScript
script(src='/vendor/jquery-easing/jquery.easing.min.js')
// Custom scripts for all pages
script(src='/js/sb-admin-2.min.js')
// Page level plugins
script(src='/vendor/datatables/jquery.dataTables.min.js')
script(src='/vendor/datatables/dataTables.bootstrap4.min.js')
// Page level custom scripts
script(src='/js/demo/datatables-demo.js')
script(src='/js/admin/product.js')
