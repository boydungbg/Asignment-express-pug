.wrap-header-cart.js-panel-cart
    .s-full.js-hide-cart
    .header-cart.flex-col-l.p-l-65.p-r-25
      .header-cart-title.flex-w.flex-sb-m.p-b-8
        span.mtext-103.cl2
          | Your Cart
        .fs-35.lh-10.cl2.p-lr-5.pointer.hov-cl1.trans-04.js-hide-cart
          i.zmdi.zmdi-close
      .header-cart-content.flex-w.js-pscroll
        -if(carts)
          each cart in carts
            ul.header-cart-wrapitem.w-full
              li.header-cart-item.flex-w.flex-t.m-b-12
                .header-cart-item-img
                  img(src=cart.product.image[0], alt='IMG')
                .header-cart-item-txt.p-t-8
                  a.header-cart-item-name.m-b-18.hov-cl1.trans-04(href='#') #{cart.product.name}
                  span.header-cart-item-info #{cart.quantity} x #{cart.product.price}
          .w-full
            .header-cart-total.w-full.p-tb-40 Total: $#{total}
            .header-cart-buttons.flex-w.w-full
              a.flex-c-m.stext-101.cl0.size-107.bg3.bor2.hov-btn3.p-lr-15.trans-04.m-r-8.m-b-10(href='/cozastore/shoping-cart')
                | View Cart
              a.flex-c-m.stext-101.cl0.size-107.bg3.bor2.hov-btn3.p-lr-15.trans-04.m-b-10(href='/cozastore/shoping-cart')
                | Check Out