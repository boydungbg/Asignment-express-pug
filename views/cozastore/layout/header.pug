header
    // Header desktop
    .container-menu-desktop
      // Topbar
      .top-bar
        .content-topbar.flex-sb-m.h-full.container
          .left-top-bar
            | Free shipping for standard order over $100
          .right-top-bar.flex-w.h-full
            a.flex-c-m.trans-04.p-lr-25(href='/cozastore/login')
              | My Account
      .wrap-menu-desktop
        nav.limiter-menu-desktop.container
          // Logo desktop
          a.logo(href='/cozastore/index')
            img(src='/images/icons/logo-01.png', alt='IMG-LOGO')
          // Menu desktop
          .menu-desktop
            ul.main-menu
              li
                a(href='/cozastore/index') Home
                ul.sub-menu
                  li
                    a(href='/cozastore/index') Homepage 1
                  li
                    a(href='/cozastore/index/homepage2') Homepage 2
                  li
                    a(href='/cozastore/index/homepage3') Homepage 3
              li
                a(href='/cozastore/product') Shop
              li.label1(data-label1='hot')
                a(href='/cozastore/shoping-cart') Features
              li
                a(href='/cozastore/blog') Blog
              li
                a(href='/cozastore/about') About
              li
                a(href='/cozastore/contact') Contact
          // Icon header
          include ../layout/icon-header.pug
    // Header Mobile
    .wrap-header-mobile
      // Logo moblie
      .logo-mobile
        a(href='index.html')
          img(src='/images/icons/logo-01.png', alt='IMG-LOGO')
      // Icon header
      .wrap-icon-header.flex-w.flex-r-m.m-r-15
        .icon-header-item.cl2.hov-cl1.trans-04.p-r-11.js-show-modal-search
          i.zmdi.zmdi-search
        .icon-header-item.cl2.hov-cl1.trans-04.p-r-11.p-l-10.icon-header-noti.js-show-cart(data-notify=length)
          i.zmdi.zmdi-shopping-cart
        a.dis-block.icon-header-item.cl2.hov-cl1.trans-04.p-r-11.p-l-10.icon-header-noti(href='#', data-notify='0')
          i.zmdi.zmdi-favorite-outline
      // Button show menu
      .btn-show-menu-mobile.hamburger.hamburger--squeeze
        span.hamburger-box
          span.hamburger-inner
    // Menu Mobile
    .menu-mobile
      ul.topbar-mobile
        li
          .left-top-bar
            | Free shipping for standard order over $100
        li
          .right-top-bar.flex-w.h-full
            a.flex-c-m.p-lr-10.trans-04(href='#')
              | Help &amp; FAQs
            a.flex-c-m.p-lr-10.trans-04(href='#')
              | My Account
            a.flex-c-m.p-lr-10.trans-04(href='#')
              | EN
            a.flex-c-m.p-lr-10.trans-04(href='#')
              | USD
      ul.main-menu-m
        li
          a(href='/cozastore/index') Home
          ul.sub-menu
            li
              a(href='/cozastore/index') Homepage 1
            li
              a(href='/cozastore/index/homepage2') Homepage 2
            li
              a(href='/cozastore/index/homepage3') Homepage 3
        li
          a(href='/cozastore/product') Shop
        li.label1(data-label1='hot')
          a(href='/cozastore/shoping-cart') Features
        li
          a(href='/cozastore/blog') Blog
        li
          a(href='/cozastore/about') About
        li
          a(href='/cozastore/contact') Contact
    // Modal Search
    .modal-search-header.flex-c-m.trans-04.js-hide-modal-search
      .container-search-header
        button.flex-c-m.btn-hide-modal-search.trans-04.js-hide-modal-search
          img(src='/images/icons/icon-close2.png', alt='CLOSE')
        form.wrap-search-header.flex-w.p-l-15
          button.flex-c-m.trans-04
            i.zmdi.zmdi-search
          input.plh3(type='text', name='search', placeholder='Search...')